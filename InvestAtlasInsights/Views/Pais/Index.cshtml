@using Application.ViewModels.Pais;
@model List<PaisViewModels>;

@{

    ViewData["Title"] = "Pais Page";
}

<div class="row">
    <div class="text-center">
        <h1 class="display-4">Mantenimiento de paises</h1>
    </div>
</div>

<div class="row mt-2">   
     <a class="btn btn-outline-success float-end" asp-controller="Pais" asp-action="Create">Agregar Pais +</a>  
</div>

<div class="row mt-2">
    @if(Model.Count == 0)
    {
    <div class="text-center">
        <h5 class="display-4">No hay paises</h5>
    </div>
    }
    else
    {

       @foreach (var item in Model)
      {
         <div class="row mt-4  d-flex ">
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Pais:  @item.Nombre</h5>
                        <h5 class="card-title">Codigo ISO:  @item.CodigoISO</h5>
                 
                        

                        <div class="mt-2">
                            <a class="btn btn-outline-warning" asp-controller="Pais" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-outline-danger me-2" asp-controller="Pais" asp-action="Delete">Eliminar</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        
    
       }
   


    }
</div>

