@using Application.ViewModels.IndicadorPais;
@model SaveIndicadorPaisViewModel

<form asp-action="@(Model.IsEdit ? "Edit" : "Create")" method="post">
    @if (Model.IsEdit)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="PaisId"></label>
        <select asp-for="PaisId" asp-items="Model.Paises" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="MacroindicadorId"></label>
        <select asp-for="MacroindicadorId" asp-items="Model.Macroindicadores" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Anio"></label>
        <input asp-for="Anio" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
