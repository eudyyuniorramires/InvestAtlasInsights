@using Application.ViewModels.MacroIndicador;
@model List<MacroIndicadorViewModels>;

@{

    ViewData["Title"] = "MacroIndicador";
}

<div class="row">
    <div class="text-center">
        <h1 class="display-4">Mantenimiento de Macro Indicadores</h1>
    </div>
</div>

<div class="row mt-2">
    <a class="btn btn-outline-success float-end" asp-controller="MacroIndicador" asp-action="Create">Agregar Macro Indicador +</a>
</div>

<div class="row mt-2 d-flex flex-wrap justify-content-start">
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h5 class="display-4">No hay Macro Indicadores</h5>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Nombre: @item.Nombre</h5>
                        <h5 class="card-title">Peso: @item.Peso</h5>

                         

                        <div class="mt-2">
                            <a class="btn btn-outline-warning" asp-controller="Pais" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-outline-danger me-2" asp-controller="Pais" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
</div>


