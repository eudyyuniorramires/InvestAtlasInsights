@using Application.ViewModels.Pais;
@model SavePaisViewModels
@{
    
    bool editmode = ViewBag.EditMode != null ? ViewBag.EditMode : false;
}


@{

    ViewBag.Title = "Guardar Pais";
}

<div class="col-12  col-md-6 offset-md-3">
    <div class="card">
        <div class="card-hearder bg-success  text-ligh ">
           <h5 class="text-center">@(editmode ? "Editando el pais - " + Model.Nombre : "Agregando Pais") </h5>
           <h5 class="text-center"> Pais</h5>
       
      </div>
        <div class="card-body">
            <form asp-controller="Pais" asp-action="@(editmode ? "Edit" : "Create")" method="POST">
                <input  type="hidden" asp-for="Id"/>
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre:</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>

                <div class="mb-3">
                    <label asp-for="CodigoISO" class="form-label">Codigo ISO:</label>
                    <input class="form-control" asp-for="CodigoISO" />
                </div>

                <div>
                    <button  type="submit" class="btn btn-outline-primary float-end">Guardar</button>
                    <a asp-controller="Pais" asp-action ="Index"  class="btn btn-outline-warning me-2">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>
